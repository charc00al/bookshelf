<%- include("partials/header.ejs") %>

<main>
    <h1>Add new book </h1>

    <form class="add-book" action="/add-new-book" method="post">
        <label for="title">Book title</label>
        <input type="text" name="title" id="" value="<%=book.title%>">

        <label for="author">Author</label>
        <input type="text" name="author" id="" value="<%=book.authors%>">

        <label for="isbn">ISBN 13</label>
        <input type="text" name="isbn" id="" value="<%=book.isbn%>">

        <button type="submit">Add to my library</button>


    </form>

</main>

